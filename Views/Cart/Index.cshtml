@model IEnumerable<Projekt.Models.CartItem>

@{
    ViewData["Title"] = "Koszyk";
}

<h1>Koszyk</h1>

<table class="table">
    <thead>
        <tr>
            <th>Hotel</th>
            <th>Data zameldowania</th>
            <th>Data wymeldowania</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Hotel.Name</td>
                    <td>@item.CheckInDate.ToShortDateString()</td>
                    <td>@item.CheckOutDate.ToShortDateString()</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="submit" value="Usuń" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>

<form asp-action="PlaceOrder" method="post">
    <input type="submit" value="Złóż zamówienie" class="btn btn-primary" />
</form>
