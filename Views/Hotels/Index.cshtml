@model IEnumerable<Projekt.Models.Hotel>

@{
    ViewData["Title"] = "Lista Hoteli";
}

<h1>Lista Hoteli</h1>

<div class="row">
    @foreach (var item in Model)
    {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img class="card-img-top" src="@Url.Content(item.ImageUrl)" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            <strong>Miasto:</strong> @item.City<br>
                            <strong>Adres:</strong> @item.Address<br>
                            <strong>Cena za noc:</strong> @item.PricePerNight zł
                        </p>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Szczegóły</a>
                    </div>
                </div>
            </div>
    }
</div>
